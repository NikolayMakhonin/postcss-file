{
  "name": "@flemist/postcss-file",
  "version": "0.2.2",
  "description": "PostCSS plugin for handle assets",
  "main": "dist/index.js",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "file",
    "url",
    "asset"
  ],
  "author": "Shelton Dong <dongxu2048@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:DongShelton/postcss-file.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "changelog": "./node_modules/.bin/standard-version",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "bugs": {
    "url": "https://github.com/DongShelton/postcss-file/issues",
    "email": "dongxu2048@gmail.com"
  },
  "homepage": "https://github.com/DongShelton/postcss-file",
  "peerDependencies": {
    "postcss": ">=8"
  },
  "dependencies": {
    "chalk": "^2.3.1",
    "is-valid-path": "^0.1.1",
    "mkdirp": "^0.5.1",
    "url-join": "=4.0.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/is-valid-path": "^0.1.0",
    "@types/jest": "^22.1.3",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^9.4.6",
    "@types/url-join": "^4.0.1",
    "jest": "^23.6.0",
    "pre-commit": "^1.2.2",
    "postcss": "^8.4.16",
    "rollup": "^0.54.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-typescript2": "^0.10.0",
    "standard-version": "^4.4.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "pre-commit": [
    "build",
    "lint",
    "test:coverage"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
